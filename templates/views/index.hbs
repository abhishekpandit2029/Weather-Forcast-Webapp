<!DOCTYPE html>
<html lang="en">
<head>
    {{!-- Head Links --}}
    {{>headlinks}}
</head>
<body>
    <!-- navbar -->
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to weather app</p>
                        <h1>Get The Latest <spna class="text_clr"> Weather </spna> Info Of Your City</h1>
                        <a href="/weather"><button>check now</button></a>
                    </div>   

                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active"><img src="imgs/Weather-bro.svg" class="w-100 carousel-img" alt="w2"></div>
                                <div class="carousel-item"><img src="imgs/Weather-cuate.svg" class="w-100 carousel-img" alt="w3"></div>
                                <div class="carousel-item"><img src="imgs/Weather-rafiki.svg" class="w-100 carousel-img" alt="w5"></div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    {{>footer}}
    
</body>
</html>
